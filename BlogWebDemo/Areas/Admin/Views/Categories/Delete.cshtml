@model BlogWebDemo.Models.Category

@{
    ViewData["Title"] = "XOÁ DANH MỤC";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="slim-pageheader">
    <ol class="breadcrumb slim-breadcrumb">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Categories" asp-action="Index">QUẢN LÝ DANH MỤC</a></li>
        <li class="breadcrumb-item active" aria-current="page">THÔNG TIN</li>
    </ol>
    <h6 class="slim-pagetitle">XOÁ DANH MỤC: @Model.CatName</h6>
</div><!-- slim-pageheader -->

<div class="section-wrapper mg-t-20">
    <div class="form-layout form-layout-7">
        <div class="row no-gutters">
            <div class="col-5 col-sm-4">
                ID:
            </div>
            <div class="col-7 col-sm-8">
                <input asp-for="CatId" class="form-control" type="text" />
            </div><!-- col-4 -->
        </div>
        <div class="row no-gutters">
            <div class="col-5 col-sm-4">
                Category Name:
            </div>
            <div class="col-7 col-sm-8">
                <input asp-for="CatName" class="form-control" type="text" />
            </div><!-- col-4 -->
        </div><!-- col-4 -->
        <div class="row no-gutters">
            <div class="col-5 col-sm-4">
                Title:
            </div>
            <div class="col-7 col-sm-8">
                <input asp-for="Title" class="form-control" type="text" />
            </div><!-- col-4 -->
        </div>
        <div class="row no-gutters">
            <div class="col-5 col-sm-4">
                Alias:
            </div>
            <div class="col-7 col-sm-8">
                <input asp-for="Alias" class="form-control" type="text" />
            </div><!-- col-4 -->
        </div>
        <div class="row no-gutters">
            <div class="col-5 col-sm-4">
                Title:
            </div>
            <div class="col-7 col-sm-8">
                <input asp-for="Title" class="form-control" type="text" />
            </div><!-- col-4 -->
        </div>
        <div class="row no-gutters">
            <div class="col-5 col-sm-4">
                Ordering:
            </div>
            <div class="col-7 col-sm-8">
                <input asp-for="Ordering" class="form-control" type="text" />
            </div><!-- col-4 -->
        </div>
        <div class="row no-gutters">
            <div class="col-5 col-sm-4">
                Parents:
            </div>
            <div class="col-7 col-sm-8">
                <input asp-for="Parents" class="form-control" type="text" />
            </div><!-- col-4 -->
        </div>
        <div class="row no-gutters">
            <div class="col-5 col-sm-4">
                Levels:
            </div>
            <div class="col-7 col-sm-8">
                <input asp-for="Levels" class="form-control" type="text" />
            </div><!-- col-4 -->
        </div>
        <div class="row no-gutters">
            <div class="col-5 col-sm-4">
                MetaDesc:
            </div>
            <div class="col-7 col-sm-8">
                <input asp-for="MetaDesc" class="form-control" type="text" />
            </div><!-- col-4 -->
        </div>
        <div class="row no-gutters">
            <div class="col-5 col-sm-4">
                MetaKey:
            </div>
            <div class="col-7 col-sm-8">
                <input asp-for="MetaKey" class="form-control" type="text" />
            </div><!-- col-4 -->
        </div>
        <div class="row no-gutters">
            <div class="col-5 col-sm-4">
                Published:
            </div>
            <div class="col-7 col-sm-8">
                @if (Model.Published == true)
                {
                    <span class="btn badge-primary">Public</span>
                }
                else
                {
                    <span class="btn badge-primary">Public</span>
                }
            </div><!-- col-4 -->
        </div>
        <div class="row no-gutters">
            <div class="col-5 col-sm-4">
                Thumbnail:
            </div>
            <div class="col-7 col-sm-8">
                @if (!string.IsNullOrEmpty(Model.Thumb))
                {
                    <img width="80" height="80" src="~/images/categories/@Model.Thumb" alt="@Model.CatName">
                }
            </div><!-- col-4 -->
        </div>
        <div class="row no-gutters">
            <div class="col-5 col-sm-4">
                Icon:
            </div>
            <div class="col-7 col-sm-8">
                @if (!string.IsNullOrEmpty(Model.Icon))
                {
                    <img width="80" height="80" src="~/images/icons/@Model.Icon" alt="@Model.CatName">
                }
            </div><!-- col-4 -->
        </div>
        <div class="row no-gutters">
            <div class="col-5 col-sm-4">
                Thumbnail:
            </div>
            <div class="col-7 col-sm-8">
                @if (!string.IsNullOrEmpty(Model.Cover))
                {
                    <img width="80" height="80" src="~/images/covers/@Model.Cover" alt="@Model.CatName">
                }
            </div><!-- col-4 -->
        </div>
        <div class="row no-gutters">
            <div class="col-5 col-sm-4">
                Description:
            </div>
            <div class="col-7 col-sm-8">
                <input asp-for="Description" class="form-control" type="text" />
            </div><!-- col-4 -->
        </div>
    </div>
</div>

<div style="text-align:center !important" class="form-layout-footer mg-t-30">
    <form asp-area="Admin" asp-action="Delete" asp-route-id="@Model.CatId">
        <input type="hidden" asp-for="CatId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-area="Admin" asp-controller="Categories" asp-action="Index" class="btn btn-success bd-0">Back</a>
    </form>
</div>
