@model BlogWebDemo.Models.News

@{
    ViewData["Title"] = "CHỈNH SỬA TIN TỨC";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section Styles {
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet" />
    <link href="~/AdminAssests/lib/select2/css/select2.min.css" rel="stylesheet" />
}

<div class="slim-pageheader">
    <ol class="breadcrumb slim-breadcrumb">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="News" asp-action="Index">QUẢN LÝ TIN TỨC</a></li>
        <li class="breadcrumb-item active" aria-current="page">TẠO MỚI</li>
    </ol>
    <h6 class="slim-pagetitle">CHỈNH SỬA TIN TỨC</h6>
</div><!-- slim-pageheader -->

<div class="section-wrapper">
    <div class="form-layout">
        <form asp-area="Admin" asp-controller="News" asp-action="Edit" asp-route-id="@Model.PostId" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="PostId" />
            <input type="hidden" asp-for="CreatedAt" />
            <input type="hidden" asp-for="Author" />
            <input type="hidden" asp-for="AccountId" />
            <input type="hidden" asp-for="Thumb" />
            <div class="row mg-b-25">
                <div class="col-lg-12">
                    <div class="form-group">
                        <label class="form-control-label">Title: <span class="tx-danger">*</span></label>
                        <input class="form-control" type="text" asp-for="Title">
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="form-group">
                        <label class="form-control-label">Short Content: <span class="tx-danger">*</span></label>
                        <input class="form-control" type="text" asp-for="Scontents">
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="form-group">
                        <label class="form-control-label">Author: <span class="tx-danger">*</span></label>
                        <input class="form-control" type="text" asp-for="Author">
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group mg-b-10-force">
                        <label class="form-control-label">Category: <span class="tx-danger">*</span></label>
                        <select class="form-control select2" asp-for="CatId" asp-items="@ViewBag.DanhMuc" required>
                            <option value="0" selected>DANH MỤC</option>
                        </select>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group mg-b-10-force">
                        <label class="form-control-label">Thumbnail: <span class="tx-danger">*</span></label>
                        <input name="fThumb" type="file" class="form-control-file" asp-for="Thumb" />
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="form-group mg-b-10-force">
                        <label class="form-control-label">TAGS: <span class="tx-danger">*</span></label>
                        <input class="form-control" type="text" asp-for="Tag" />
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="form-group">
                        <label class="form-control-label">Content: <span class="tx-danger">*</span></label>
                        <textarea asp-for="Contents"></textarea>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group mg-b-10-force">
                        <input type="checkbox" @*asp-for="Published"*@ /><span> <strong>Published</strong></span>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group mg-b-10-force">
                        <input type="checkbox" @*asp-for="IsHot"*@ /><span> <strong>IsHot</strong></span>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group mg-b-10-force">
                        <input type="checkbox" @*asp-for="IsNewFeed"*@ /><span> <strong>IsNewFeed</strong></span>
                    </div>
                </div>

                <div class="form-layout-footer">
                    <button class="btn btn-primary bd-0">Submit</button>
                    <button asp-area="Admin" asp-controller="News" asp-action="Index" class="btn btn-secondary bd-0">Cancel</button>
                </div><!-- form-layout-footer -->
            </div>
        </form>
    </div>
</div><!-- form-layout -->


@section Scripts {
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"></script>
    <script src="~/AdminAssests/lib/select2/css/select2.min.js"></script>
    <script>
        jQuery(document).ready(function () {
            $('#Contents').summernote({
                fontNames: ['Arial', 'Arial Black', 'Comic Sans MS', 'Courier New'],
                styleTags: ['p', 'h1', 'h2', 'h3', 'h4', 'h5', 'h6'],
                height: 200,
                minHeight: null,
                maxHeight: null,
                focus: true
            })
        })
    </script>
}


