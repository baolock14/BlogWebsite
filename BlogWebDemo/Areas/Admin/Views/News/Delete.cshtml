@model BlogWebDemo.Models.News

@{
    ViewData["Title"] = "XOÁ TIN TỨC";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="slim-pageheader">
    <ol class="breadcrumb slim-breadcrumb">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="News" asp-action="Index">QUẢN LÝ TIN TỨC</a></li>
        <li class="breadcrumb-item active" aria-current="page">THÔNG TIN</li>
    </ol>
    <h6 class="slim-pagetitle">XOÁ TIN TỨC</h6>
</div><!-- slim-pageheader -->

<div class="section-wrapper mg-t-20">
    <div class="form-layout form-layout-7">
        <div class="row no-gutters">
            <div class="col-5 col-sm-4">
                ID:
            </div>
            <div class="col-7 col-sm-8">
                <input asp-for="PostId" class="form-control" type="text" />
            </div><!-- col-4 -->
        </div>
        <div class="row no-gutters">
            <div class="col-5 col-sm-4">
                Title:
            </div>
            <div class="col-7 col-sm-8">
                <input asp-for="Title" class="form-control" type="text" />
            </div><!-- col-4 -->
        </div><!-- col-4 -->
        <div class="row no-gutters">
            <div class="col-5 col-sm-4">
                Create Date:
            </div>
            <div class="col-7 col-sm-8">
                <input asp-for="CreatedAt" class="form-control" type="text" />
            </div><!-- col-4 -->
        </div>
        <div class="row no-gutters">
            <div class="col-5 col-sm-4">
                Category:
            </div>
            <div class="col-7 col-sm-8">
                <input asp-for="Cat.CatName" class="form-control" type="text" />
            </div><!-- col-4 -->
        </div>
        <div class="row no-gutters">
            <div class="col-5 col-sm-4">
                Author:
            </div>
            <div class="col-7 col-sm-8">
                <input asp-for="Author" class="form-control" type="text" />
            </div><!-- col-4 -->
        </div>
    </div>
</div>

<div style="text-align:center !important" class="form-layout-footer mg-t-30">
    <form asp-area="Admin" asp-action="Delete" asp-route-id="@Model.CatId">
        <input type="hidden" asp-for="CatId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-area="Admin" asp-controller="News" asp-action="Index" class="btn btn-success bd-0">Back</a>
    </form>
</div>